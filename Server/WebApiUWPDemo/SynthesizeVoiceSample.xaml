<Page
    x:Class="WebApiUWPDemo.SynthesizeVoiceSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebApiUWPDemo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="txtInput"
                 Margin="10"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button x:Name="btnSynthesizeVoice"
                Content="SynthesizeVoice"
                Grid.Row="0"
                Click="btnSynthesizeVoice_Click"
                Margin="10"/>
            <MediaElement x:Name="media"
                          AutoPlay="False"/>
        </Grid>
        <TextBox x:Name="txtMessage"
                 Grid.Row="2"
                 Margin="10"
                 Text="就绪。。。"/>
    </Grid>
</Page>
