<Page
    x:Class="WebApiSample.Views.Page1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WebApiSample.Views"
    xmlns:ctl="using:WebApiSample.Controls"
    xmlns:data="using:WebApiSample.Model"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Name="FaceListNameTemplate" x:DataType="data:FaceListNameInfo">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Ellipse x:Name="ellipse"
                         Grid.Column="0"
                         Width="32"
                         Height="32"
                         Margin="6"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Center"
                         Fill="Gray"/>
                <TextBlock Grid.Column="1"
                           Text="{x:Bind Name}"
                           Style="{StaticResource BaseTextBlockStyle}"
                           x:Phase="1"
                           Margin="12 6 0 0"/>
            </Grid>
            
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
          EntranceNavigationTransitionInfo.IsTargetElement="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <CommandBar x:Name="topBar" VerticalAlignment="Top" HorizontalAlignment="Stretch"
                    Grid.ColumnSpan="2">
            <AppBarButton Icon="Add" Label="Add" Click="AppBarButton_Click"/>
            <AppBarButton Icon="Accept" Label="Accept" Click="AppBarButton_Click"/>
            <AppBarSeparator/>
            <AppBarButton Icon="Sort" Label="Sort" Click="AppBarButton_Click"/>
            <CommandBar.SecondaryCommands>
                <AppBarButton Label="menu1" Click="AppBarButton_Click"/>
                <AppBarButton Label="menu2" Click="AppBarButton_Click"/>
                <AppBarButton Label="menu3" Click="AppBarButton_Click"/>
            </CommandBar.SecondaryCommands>
            <CommandBar.Content>
                <ctl:PageHeader>
                    <ctl:PageHeader.HeaderContent>
                        <TextBlock Text="主页" 
                                   Style="{ThemeResource PageTitleTextBlockStyle}" 
                                   TextWrapping="NoWrap"/>
                    </ctl:PageHeader.HeaderContent>
                </ctl:PageHeader>
            </CommandBar.Content>
        </CommandBar>
        <RelativePanel Grid.Row="1"
                Margin="40 40">
            <Ellipse x:Name="elAvator"
                Height="100"
                Width="100">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="/Assets/userAvatorDefault.png"/>
                </Ellipse.Fill>
            </Ellipse>
            <Button x:Name="btnChangeAccount"
                RelativePanel.Below="elAvator"
                Margin="10"
                Content="账户设置">
                <Button.Flyout>
                    <MenuFlyout>
                        <MenuFlyoutItem Text="更换头像" Click="MenuFlyoutItem_Click" Tag="ChangeAvator"/>
                        <MenuFlyoutItem Text="注销" Click="MenuFlyoutItem_Click" Tag="Logout"/>
                    </MenuFlyout>
                </Button.Flyout>
            </Button>
        </RelativePanel>
        <Grid x:Name="memberList"
                  Grid.Row="1"
                  Grid.Column="1"
                  Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border Background="{ThemeResource SystemControlBackgroundChromeMediumBrush}"
                    Grid.Row="0"
                    x:Name="borderAddMember"
                    Tapped="borderAddMember_Tapped">
                <TextBlock Text="成员列表" Margin="24,8,8,8"
                           Style="{ThemeResource TitleTextBlockStyle}" />
            </Border>
            <ListView x:Name="lvFaceListName"
                  Grid.Row="1"
                  ItemClick="lvFaceListName_ItemClick"
                  ItemTemplate="{StaticResource FaceListNameTemplate}">
            </ListView>
        </Grid>
        <!--<ListView x:Name="lvFaceListName"
                  Grid.Row="1"
                  Grid.Column="1"
                  Margin="10"
                  ItemClick="lvFaceListName_ItemClick"
                  ItemTemplate="{StaticResource FaceListNameTemplate}">
        </ListView>-->
        <!--<StackPanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Orientation="Horizontal"
            Grid.Row="3"
            Grid.Column="0">
            <TextBlock
                Text="状态:"
                FontSize="24"/>
            <HyperlinkButton x:Name="btnHomeStatus"
                             Content="正常"
                             Foreground="Green"
                             FontSize="24"
                             Click="btnHomeStatus_Click"/>
        </StackPanel>-->
        <RelativePanel
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Grid.Row="3"
            Grid.Column="0">
            <TextBlock
                x:Name="tbStatus"
                Text="状态:"
                FontSize="24"/>
            <HyperlinkButton x:Name="btnHomeStatus"
                             Content="正常"
                             FontSize="18"
                             Foreground="Green"
                             RelativePanel.RightOf="tbStatus"
                             Click="btnHomeStatus_Click"/>
        </RelativePanel>
        <Grid Grid.Row="3"
              Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Text="最近的活动"
                        Style="{StaticResource HeaderTextBlockStyle}"/>
            <TextBlock x:Name="tbLastActivity"
                       Grid.Row="1"
                       FontSize="24"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Text="无"/>
            <ToggleSwitch
                Grid.Row="2"
                x:Name="toggleLed"
                Header="LED 开关"
                IsOn="False"
                Toggled="toggleLed_Toggled"/>
        </Grid>
        <ProgressRing x:Name="loading"
                      Width="80"
                      Height="80"
                      Grid.ColumnSpan="10"
                      Grid.RowSpan="10"
                      IsActive="False"/>
    </Grid>
</Page>
